{% extends 'base.html.twig' %}

{% block title %}Servicio index{% endblock %}

{% block body %}
    <h1>Servicio index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Descripcion</th>
                <th>Comentario</th>
                <th>Calificacion</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for servicio in servicios %}
            <tr>
                <td>{{ servicio.id }}</td>
                <td>{{ servicio.descripcion }}</td>
                <td>{{ servicio.comentario }}</td>
                <td>{{ servicio.calificacion }}</td>
                <td>
                    <a href="{{ path('servicio_show', {'id': servicio.id}) }}">show</a>
                    <a href="{{ path('servicio_edit', {'id': servicio.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('servicio_new') }}">Create new</a>
{% endblock %}
